# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text diff=markdown
*.txt text
*.html text diff=html
*.css text
*.js text
*.json text
*.xml text
*.svg text

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary

# Archives
*.7z binary
*.bz2 binary
*.gz binary
*.rar binary
*.tar binary
*.zip binary

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Config files
*.yml text
*.yaml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Logs
*.log text

# Database
*.sql text
*.db binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary
*.flac binary

# Executables
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
